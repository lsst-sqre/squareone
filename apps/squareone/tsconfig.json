{
  "extends": "@lsst-sqre/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Strict TypeScript enabled - migration complete
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // Temporarily disabled for migration completion
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": false,
    // Enable incremental compilation
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.tsbuildinfo",
    "types": ["vitest/globals"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "vitest.config.ts"
  ]
}
