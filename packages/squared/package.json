{
  "name": "@lsst-sqre/squared",
  "description": "A React component library for Squareone / Rubin Data Management.",
  "version": "0.8.0",
  "private": true,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./components/*": "./src/components/*"
  },
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "src/**"
  ],
  "scripts": {
    "test": "vitest run",
    "lint": "eslint \"src/**/*.ts*\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "vitest run --project=storybook",
    "test-storybook:watch": "vitest watch --project=storybook",
    "new-component": "new-component"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "^4.5.11",
    "@fortawesome/fontawesome-svg-core": "^6.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.3.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@lsst-sqre/global-css": "workspace:*",
    "@lsst-sqre/rubin-style-dictionary": "workspace:*",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.3.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-feather": "^2.0.10",
    "swr": "^2.2.1",
    "unfetch": "^4.2.0"
  },
  "devDependencies": {
    "@lsst-sqre/eslint-config": "workspace:*",
    "@lsst-sqre/tsconfig": "workspace:*",
    "@storybook/addon-a11y": "9.1.3",
    "@storybook/addon-docs": "9.1.3",
    "@storybook/addon-links": "9.1.3",
    "@storybook/addon-onboarding": "9.1.3",
    "@storybook/addon-themes": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/react-vite": "9.1.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/browser": "^3.2.4",
    "eslint": "^8.35.0",
    "eslint-plugin-storybook": "^9.1.3",
    "glob": "^11.0.3",
    "msw": "^2.10.5",
    "msw-storybook-addon": "^2.0.5",
    "new-component": "^5.0.2",
    "next": "^15.5.0",
    "playwright": "^1.55.0",
    "react-hook-form": "^7.62.0",
    "storybook": "9.1.3",
    "typescript": "^5.9.2",
    "typescript-plugin-css-modules": "^5.0.1",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "next": "15",
    "react": "19",
    "react-dom": "19"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "roots": [
      "src"
    ]
  }
}
