{
  "name": "@lsst-sqre/repertoire-client",
  "description": "Repertoire service discovery client for Rubin Science Platform",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "default": "./src/hooks/index.ts"
    }
  },
  "files": ["src/**"],
  "sideEffects": false,
  "scripts": {
    "test": "vitest run",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf node_modules",
    "fetch-openapi": "curl -o openapi.json https://data.lsst.cloud/repertoire/openapi.json"
  },
  "dependencies": {
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5",
    "react": "^18 || ^19"
  },
  "devDependencies": {
    "@anatine/zod-mock": "^3.13.0",
    "@faker-js/faker": "^9.0.0",
    "@lsst-sqre/eslint-config": "workspace:*",
    "@lsst-sqre/tsconfig": "workspace:*",
    "@tanstack/react-query": "^5.90.20",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.10",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
