    "@tanstack/react-query": "^5.62.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
