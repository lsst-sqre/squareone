{
  "name": "squareone",
  "version": "0.7.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,json,css,graphql,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,graphql,yaml}\"",
    "prepare": "husky install"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ]
  },
  "lint-staged": {
    "*.{js,json,css,graphql,yaml}": "prettier --write"
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "^4.5.10",
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@lsst-sqre/rubin-style-dictionary": "^0.3.0",
    "@reach/alert": "^0.17.0",
    "@reach/menu-button": "^0.17.0",
    "ajv": "^8.11.0",
    "formik": "^2.2.9",
    "js-yaml": "^4.1.0",
    "next": "^12.2.4",
    "next-themes": "^0.2.0",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-a11y-disclosure": "^0.1.0",
    "react-dom": "^17.0.2",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.1",
    "styled-components": "^5.3.5",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^2.0.7",
    "eslint": "^8.21.0",
    "eslint-config-next": "^12.2.4",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1"
  }
}
