{
  "name": "squareone",
  "version": "0.4.1",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{json,css,graphql,yaml}\"",
    "format:check": "prettier --check \"**/*.{json,css,graphql,yaml}\"",
    "prepare": "husky install"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ]
  },
  "lint-staged": {
    "*.{js,json,css,graphql,yaml}": "prettier --write"
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "^4.5.4",
    "@fortawesome/fontawesome-svg-core": "^6.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.1.0",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@lsst-sqre/rubin-style-dictionary": "^0.3.0",
    "@reach/menu-button": "^0.16.2",
    "ajv": "^8.10.0",
    "js-yaml": "^4.1.0",
    "next": "^12.1.0",
    "next-themes": "^0.1.1",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-a11y-disclosure": "^0.1.0",
    "react-dom": "^17.0.2",
    "remark": "^13.0.0",
    "remark-gfm": "^1.0.0",
    "remark-html": "^13.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^2.0.6",
    "eslint": "^8.11.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0"
  }
}
