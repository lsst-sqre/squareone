{
  "name": "squareone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{json,css,graphql,yaml}\"",
    "format:check": "prettier --check \"**/*.{json,css,graphql,yaml}\"",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "wesbos"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "printWidth": 80,
          "endOfLine": "auto",
          "proseWrap": "never"
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "dependencies": {
    "@lsst-sqre/rubin-style-dictionary": "^0.2.0",
    "@reach/menu-button": "^0.12.1",
    "ajv": "^7.0.3",
    "js-yaml": "^4.0.0",
    "next": "10.0.5",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-wesbos": "1.0.1",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^5.1.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.1.0"
  }
}
