{
  "private": true,
  "scripts": {
    "localci": "node scripts/validate-docker-versions.js && node scripts/turbo-wrapper.js run biome:format:check prettier:yaml lint type-check test build && pnpm run biome:lint",
    "build": "node scripts/turbo-wrapper.js run build",
    "file-factory": "node packages/file-factory/dist/cli.js",
    "dev": "node scripts/turbo-wrapper.js run dev",
    "test": "node scripts/turbo-wrapper.js run test",
    "storybook": "node scripts/turbo-wrapper.js run storybook",
    "build-storybook": "node scripts/turbo-wrapper.js run build-storybook",
    "test-storybook": "node scripts/turbo-wrapper.js run test-storybook",
    "test-storybook:watch": "node scripts/turbo-wrapper.js run test-storybook:watch",
    "lint": "node scripts/turbo-wrapper.js run lint",
    "type-check": "node scripts/turbo-wrapper.js run type-check",
    "biome:lint": "biome lint . --max-diagnostics 500",
    "biome:format": "biome check . --write",
    "biome:format:check": "biome format .",
    "prettier:yaml": "prettier --check \"**/*.{yaml,yml}\"",
    "ci:publish": "node scripts/turbo-wrapper.js run build && changeset publish",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "turbo": "node scripts/turbo-wrapper.js",
    "build:local": "turbo run build",
    "docs": "uv run noxfile.py -s docs",
    "validate-docker": "node scripts/validate-docker-versions.js",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\" && node scripts/install-playwright.js"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "*.yaml",
          "*.yml"
        ],
        "options": {
          "singleQuote": true,
          "tabWidth": 2,
          "printWidth": 80,
          "trailingComma": "none"
        }
      }
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@turbo/gen": "^2.8.3",
    "dotenv": "^17.2.4",
    "eslint": "^9.26.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "playwright": "^1.58.1",
    "prettier": "^2.8.8",
    "turbo": "2.8.3"
  },
  "engines": {
    "node": "^22.21.1",
    "pnpm": ">=10.20.0"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
