{
  // Hybrid linting setup: Biome + ESLint
  // - Biome: General JS/TS/React linting (via biomejs.biome extension)
  // - ESLint: Framework-specific rules for Next.js/Storybook
  "eslint.workingDirectories": [
    "./apps/squareone",
    "./packages/squared",
    "./packages/rubin-style-dictionary"
  ],

  // Formatting with Biome (YAML uses Prettier)
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",

  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    // "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "never",
    "editor.quickSuggestions": {
      "strings": true,
      "other": true,
      "comments": false
    }
  }
}
