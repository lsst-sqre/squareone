{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": ["**", "!!**/package.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "noSvgWithoutTitle": "warn",
        "useSemanticElements": "warn",
        "noStaticElementInteractions": "warn"
      },
      "complexity": {
        "recommended": true,
        "noUselessFragments": "warn"
      },
      "correctness": {
        "recommended": true,
        "noUnusedFunctionParameters": "warn",
        "noUnusedVariables": "warn",
        "noEmptyPattern": "warn"
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noNonNullAssertion": "warn"
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.test.ts", "**/*.test.tsx", "**/*.stories.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off"
          },
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/*.d.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "noBannedTypes": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/packages/squared/src/components/DateTimePicker/TimeInput.tsx",
        "**/packages/squared/src/components/Select/Select.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noTsIgnore": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/packages/squared/vitest.config.ts",
        "**/packages/squared/src/components/Button/Button.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/packages/squared/**/*.tsx",
        "**/packages/squared/**/*.ts",
        "**/packages/squared/**/*.css"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off",
            "noSvgWithoutTitle": "off",
            "noStaticElementInteractions": "off"
          },
          "style": {
            "noDescendingSpecificity": "off"
          }
        }
      }
    }
  ]
}
